{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@context/*": ["src/Context/*"],
      "@components/*": ["src/Components/*"],
      "@pages/*": ["src/Pages/*"],
      "@static/*": ["src/Static/*"],
      "@store/*": ["src/Store/*"],
      "@src/*": ["src/*"],
      "@endpoints/*": ["src/Endpoints/*"],
      "@hooks/*": ["src/Hooks/*"],
      "@services/*": ["src/Services/*"]
    },
    "module": "ES2020",
    "target": "ES2019",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "checkJs": false,
    "skipLibCheck": true
  },
  "files": [
    "./src/Types/window.d.ts",
    "./src/Types/custom.d.ts"
  ],
  "include": ["src", ".storybook"],
  "exclude": ["node_modules"]
}
